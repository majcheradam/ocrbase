# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database (Required)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ocrbase

# Authentication (Required)
BETTER_AUTH_SECRET=your-secret-key-at-least-32-characters-long
BETTER_AUTH_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3001

# Redis (Required for queue and websocket)
REDIS_URL=redis://localhost:6379

# S3/MinIO Storage (Required)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=ocrbase
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# OCR Service (Required)
# Option 1: Use your own hosted PaddleOCR-VL instance (recommended)
PADDLE_OCR_URL=https://your-paddleocr-instance.com
# Option 2: Self-host with docker compose --profile gpu up
# PADDLE_OCR_URL=http://localhost:8080

# LLM for data extraction (Optional - required for extract jobs)
OPENROUTER_API_KEY=

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
