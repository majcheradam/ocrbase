{
  "name": "ocrbase",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@types/bun": "^1.3.8",
      "better-auth": "^1.4.18",
      "dotenv": "^17.2.4",
      "drizzle-orm": "^0.45.1",
      "elysia": "^1.4.23",
      "nanoid": "^5.1.6",
      "typescript": "^5.9.3",
      "zod": "^4.3.6"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev dev:worker",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:server": "turbo -F server dev dev:worker",
    "db:push": "turbo -F @ocrbase/db db:push",
    "db:studio": "turbo -F @ocrbase/db db:studio",
    "db:generate": "turbo -F @ocrbase/db db:generate",
    "db:migrate": "turbo -F @ocrbase/db db:migrate",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@ocrbase/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ocrbase/config": "workspace:*",
    "@types/bun": "catalog:",
    "lefthook": "^2.1.0",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "turbo": "^2.8.3",
    "typescript": "catalog:",
    "ultracite": "7.1.5"
  },
  "packageManager": "bun@1.3.9"
}
